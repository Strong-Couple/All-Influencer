{
  "name": "all-influencer-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "start": "npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:full": "npm run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sdk:generate": "cd packages/sdk && npx ts-node scripts/generate-client.ts",
    "semgrep": "PATH=$HOME/Library/Python/3.9/bin:$PATH semgrep --config .semgrep/layered.yml",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down -v",
    "db:migrate": "docker exec -i allinfluencer-postgres psql -U allinfluencer -d allinfluencer -f /sql/001_schema.sql",
    "db:seed": "docker exec -i allinfluencer-postgres psql -U allinfluencer -d allinfluencer -f /sql/002_seed.sql",
    "db:logs": "docker logs -f allinfluencer-postgres"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "turbo": "^1.13.4",
    "typescript": "^5.3.3"
  },
  "//packageManager": "pnpm@8.12.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
}
